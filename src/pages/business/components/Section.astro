---
export interface Props {
  style: "style-1" | "style-2" | "style-3";
}

const { style = "style-1" } = Astro.props;

let color, bgSection, bgCard;

if (style === "style-1") {
  bgSection = "var(--clr-neutral-200)";
  bgCard = "var(--clr-neutral-100)";
} else if (style === "style-2") {
  color = "var(--clr-neutral-100)";
  bgSection = "var(--clr-red-400)";
  bgCard = "var(--clr-red-300)";
} else if (style === "style-3") {
  bgSection = "var(--clr-neutral-100)";
}
---

<section>
  <div class="wrapper">
    <div class="stack gap-size-3">
      <slot />
    </div>
  </div>
</section>

<style define:vars={{ color, bgSection, bgCard }}>
  section {
    background-color: var(--bgSection);
    color: var(--color);
    padding-block: var(--size-4);
  }

  section :global(.card) {
    background-color: var(--bgCard);
    max-inline-size: 35rem;
    margin-inline: auto;
  }
</style>
