<script>
  let buttons = document.querySelectorAll("button");
  buttons.forEach((button) => {
    button.addEventListener("click", () => {
      let closeArticle = button.dataset.close;
      let openArticle = button.dataset.open;

      if (closeArticle && openArticle) {
        document.getElementById(closeArticle)?.classList.toggle("hidden");
        document.getElementById(openArticle)?.classList.toggle("hidden");
      }
    });
  });
</script>

<style>
  :root {
    --big-gap: 1rem;
    --little-gap: 0.5rem;
  }

  body {
    display: grid;
    place-content: center;
  }

  main {
    max-width: 1000px;
    margin: var(--big-gap);
  }

  article {
    background-color: #f2f2f2;
    padding: var(--big-gap);
    border-radius: 1rem;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .links {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--big-gap);
  }

  .bio {
    display: flex;
    flex-direction: column;
    gap: var(--little-gap);
    align-items: center;

    text-align: center;
  }

  img {
    border-radius: 9999px;
  }

  .socials {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--big-gap);
    place-items: center;
  }

  .social {
  }

  .social > img {
    width: 50px;
    aspect-ratio: 1;
  }

  .cards {
    display: grid;
    gap: var(--big-gap);
  }

  .card-head {
    display: flex;
    justify-content: space-between;
    margin-block-end: var(--big-gap);
  }

  button {
    padding: 0.25rem 1rem;
    border: none;
    background-color: #d9d9d9;
    cursor: pointer;
    border-radius: 0.5rem;
  }

  button.primary {
    background-color: firebrick;
  }

  button:hover {
    background-color: black;
    color: white;
  }

  .hidden {
    display: none;
  }

  form {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 700px) {
    :root {
      --big-gap: 2rem;
      --little-gap: 1rem;
    }

    .links {
      grid-template-columns: 1fr 1fr;
    }

    .socials {
      grid-column: span 2;
    }

    .social > img {
      width: 100px;
    }

    .cards {
    }
  }
</style>
