---
export interface Props {
  isList: boolean;
  isOrderedList: boolean;
  className: string;
  children: any;
}

const { isList = false, isOrderedList = false, className = "" } = Astro.props;

// doing it this way prevents me from using the "client:* hydration directives"
let Element;
if (isList) {
  Element = "ul";
} else if (isOrderedList) {
  Element = "ol";
} else {
  Element = "div";
}
---

<Element class={`cluster ${className}`}>
  <slot />
</Element>

<style>
  ul,
  ol,
  div {
    display: flex;
    flex-wrap: wrap;
  }
</style>
