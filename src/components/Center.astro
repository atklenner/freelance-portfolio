---
export interface Props {
  gutter: string;
  maxInlineSize: string;
  className: string;
}

const {
  className = "",
  gutter = "var(--space-size-1)",
  maxInlineSize = "75ch",
} = Astro.props;
---

<div class={`center ${className}`}>
  <slot />
</div>

<style define:vars={{ gutter, maxInlineSize }}>
  .center {
    box-sizing: content-box;
    padding-inline: var(--gutter);
    margin-inline: auto;
    max-inline-size: var(--maxInlineSize);
  }
</style>
