---
export interface Props {
  flowSpace: string;
  className: string;
}

const { className = "", flowSpace = "var(--space-size-1)" } = Astro.props;
---

<article class={`flow-recursive ${className}`}>
  <slot />
</article>

<style define:vars={{ flowSpace }}>
  .flow-recursive :global(* + *) {
    --flow-space: var(--flowSpace);
    margin-block-start: var(--flow-space);
  }
</style>
